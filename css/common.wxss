.root {
    flex: 1;
    padding: 2px;
}

.icon-button {
    font-size: 1.6em;
    color: #00b0f0;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1px;
    position: static;
}

textarea {
    width: auto;
    height: auto;
}

.text-view {
    background-color: #fff;
    color: #666;
     font-size: 0.9em; 
    overflow-y: auto;
    padding: 8px;
    flex: 1;
}

.text-view .title {
    font-size: 2em;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px;
}

.text-view .section {
    text-indent: 2em;
    margin-top: 1em;
    word-break: break-all;
}

.icon-info{
    color: #00b0f0;
}
