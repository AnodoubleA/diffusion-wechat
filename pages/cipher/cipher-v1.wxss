/* pages/cipher/cipher.wxss */

.root {
    flex: 1;
    padding: 2px;
}

form {
    width: 100%;
    height: 100%;
}

.main {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
}

.menu {
    display: flex;
    align-items: center;
    justify-content: space-around;
    height: 2.7em;
}

.menu .icon-button {
    font-size: 2.2em;
    border: none;
    flex: 1;
}

.menu .button-hover {
    font-size: 2.5em;
}

.menu .icon-button[data-disabled=true] {
    color: gray;
}

.fa.fa-key {
    color: #00b0f0;
}

.fa.key {
    color: gold;
}

.fa.fa-lock {
    color: #fe0099;
}

.fa.fa-unlock {
    color: #00a04e;
}

textarea {
    flex: 1;
    width: auto;
    height: auto;
    padding: 2px;
}

.content {
    display: flex;
    border: 1px solid #b3b7c0;
    border-radius: 3px;
    background-color: white;
    color: #666;
}

.content.ciphertext {
    flex: none;
}
.content .output{
    display: flex;
    align-items: center;
}

.ciphertext .icon-button.bom {
    margin: 5px 10px 5px 0;
}

.buttons {
    width: 2em;
}

.icon-button.bom {
    margin-bottom: 10px;
}
