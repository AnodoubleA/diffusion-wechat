/* pages/settings/settings.wxss */

.root {
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    flex: 1;
    padding: 0;
}

.setting {
    background: white;
}

.setting.group {
    margin-top: 10px;
}

.setting.item {
    height: 40px;
    display: flex;
    align-self: stretch;
    align-items: center;
    padding: 2px 10px 2px 10px;
}

.setting .value {
    margin-left: auto;
    border: 1px solid #b3b7c0;
    border-radius: 3px;
    width: 70px;
    height: auto;
    align-self: stretch;
    margin: 5px;
    text-align: right;
    padding-right: 5px;
}

.item-active {
    background-color: rgba(0, 0, 0, 0.3);
}

.setting .name {
    flex: 1;
}

.setting .icon {
    font-size: 0.8em;
    color: gray;
}
